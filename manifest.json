{
  "manifest_version": 3,
  "name": "SATCraft",
  "version": "1.0",
  "description": "Extract SAT questions and create interactive quizzes",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://satsuitequestionbank.collegeboard.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SATCraft"
  },
  "content_scripts": [
    {
      "matches": ["https://satsuitequestionbank.collegeboard.org/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["quiz.html"],
      "matches": ["<all_urls>"]
    }
  ]
}